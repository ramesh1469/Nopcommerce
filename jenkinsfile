pipeline{
    agent { label "Docker"}
    stages{
        stage{
            steps{
                git clone: "https://github.com/ramesh1469/Nopcommerce.git",
                branch: "main"

            }
        }
        stage ("build & SonarQube analysis"){
            agent { label "Docker"}
            steps{
                withSonarQubeEnv('sonar') {
                sh 'dotnet build. sonar:sonar' 
            }
          }
        }
        stage ("docker image"){
            steps{
                sh "docker image build -t ram:1.0 ."
            }
        }
    }
}
